<h2><%= @play.title %></h2>
<h3><%= @play.director %></h2>
<h4><%= @play.category.name %></h4>
<p><%= @play.description %></p>

<div class="row">
  <div class="col-md-12">
    <div class="reviews">
      <h1>Reviews</h1>
      <%= render @play.reviews %>
      <div>
        <%= link_to "Add Reviews", new_play_review_path(@play), class: "btn-custom" %>
      </div>
    </div>
  </div>
</div>

<div class="links btn-group">
  <%= link_to "Back", root_path %>
  <% if user_signed_in? %>
    <% if @play.user == current_user %>
      <%= link_to "Edit", edit_play_path %>
      <%= link_to "Destroy", play_path(@play), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <% end %>
  <% end %>
  
